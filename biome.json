{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },

  "css": {
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    }
  },

  "files": {
    "includes": ["**", "!**/convex/_generated", "!bun.lock", "!**/dist", "!**/node_modules"]
  },

  "formatter": {
    "enabled": false
  },

  "linter": {
    "rules": {
      "a11y": {
        "noStaticElementInteractions": "off",
        "noSvgWithoutTitle": "off",
        "useButtonType": "off",
        "useKeyWithClickEvents": "off"
      },
      "complexity": {
        "noCommaOperator": "off"
      },
      "correctness": {
        "useUniqueElementIds": "off"
      },
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  }
}
